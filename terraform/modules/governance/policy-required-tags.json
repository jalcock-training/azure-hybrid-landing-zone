{
  "properties": {
    "displayName": "Require specific tag on resources (with exclusions)",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Enforces a required tag and value on all resources except excluded resource types.",
    "parameters": {
      "tagName": {
        "type": "String",
        "metadata": {
          "displayName": "Tag Name",
          "description": "Name of the tag to enforce."
        }
      },
      "tagValue": {
        "type": "String",
        "metadata": {
          "displayName": "Tag Value",
          "description": "Required value for the tag."
        }
      },
      "excludedResourceTypes": {
        "type": "Array",
        "metadata": {
          "displayName": "Excluded Resource Types",
          "description": "Resource types that should be exempt from tag enforcement."
        },
        "defaultValue": []
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "notIn": "[parameters('excludedResourceTypes')]"
          },
          {
            "anyOf": [
              {
                "field": "[concat('tags[', parameters('tagName'), ']')]",
                "exists": "false"
              },
              {
                "field": "[concat('tags[', parameters('tagName'), ']')]",
                "notEquals": "[parameters('tagValue')]"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}

